<div class="modal fade" id="addModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close closeModal" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Add/Edit Event</h4>
      </div>
      <div class="modal-body">
        <form id="eventAddForm">
	  <input type="text" name="title" value="Event Title"></br>
	  <input type="text" name="street" value="Street Address"></br>
	  <input type="text" name="city" value="City"></br>
	  <input type="datetime" name="startdate" value="Start Date">&nbsp( ex: mm/dd/yyyy )</br>
	  <input type="datetime" name="starttime" value="Start Time">&nbsp( ex: 12:30pm )</br>
	  <input type="datetime" name="enddate" value="End Date">&nbsp( ex: mm/dd/yyyy )</br>
	  <input type="datetime" name="endtime" value="End Time">&nbsp( ex: 12:30pm )</br>
	  <input type="text" name="description" value="Description"></br>
      </div>
      <strong id="modalErr" style="color:red"></strong>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary closeModal" data-dismiss="modal">Discard</button>
        <button id="validateEvent" type="button" class="btn btn-primary">Enter</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
